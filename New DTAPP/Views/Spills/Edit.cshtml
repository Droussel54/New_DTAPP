@model New_DTAPP.Models.SpillModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Spill</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SpillId" />
            <div class="mb-3">
                <label asp-for="TransferId" class="form-label">Transfer ID</label>
                <input asp-for="TransferId" class="form-control" />
                <span asp-validation-for="TransferId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="IssoInformed" class="form-label">ISSO Informed</label>
                <input id="IssoInformed" name="IssoInformed" value="@Model.IssoInformed" type="datetime" class="form-control" />
                <span asp-validation-for="IssoInformed" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ManagerInformed" class="form-label">Manager Informed</label>
                <input id="ManagerInformed" name="ManagerInformed" value="@Model.ManagerInformed" type="datetime" class="form-control" />
                <span asp-validation-for="ManagerInformed" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NatureOfSpill" class="form-label">Nature of Spill</label>
                <input asp-for="NatureOfSpill" class="form-control" />
                <span asp-validation-for="NatureOfSpill" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col">
                    <div class="mb-3 form-check">
                        <label class="form-check-label">
                            <input asp-for="BurnedAndAnnotated" class="form-check-input" /> Burned and Annotated
                        </label>
                    </div>
                </div>
                <div class="col">
                    <div class="mb-3 form-check">
                        <label class="form-check-label">
                            <input asp-for="TransferRequestCompleted" class="form-check-input" /> Transfer Request Completed
                        </label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="mb-3 form-check">
                        <label class="form-check-label">
                            <input asp-for="EmailTripleDeleted" class="form-check-input" /> Email Triple Deleted
                        </label>
                    </div>
                </div>
                <div class="col">
                    <div class="mb-3 form-check">
                        <label class="form-check-label">
                            <input asp-for="ClientInformed" class="form-check-input" /> Client Informed
                        </label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="mb-3 form-check">
                        <label class="form-check-label">
                            <input asp-for="ConsiderationPowerDown" class="form-check-input" /> Consideration Power Down
                        </label>
                    </div>
                </div>
                <div class="col">
                    <div class="mb-3 form-check">
                        <label class="form-check-label">
                            <input asp-for="CDSent" class="form-check-input" /> CD Sent
                        </label>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="DateOfSpill" class="form-label">Date of Spill</label>
                <input id="DateOfSpill" name="DateOfSpill" value="@Model.DateOfSpill" type="datetime" class="form-control" />
                <span asp-validation-for="DateOfSpill" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TimeOfSpill" class="form-label">Time of Spill</label>
                <input id="TimeOfSpill" name="TimeOfSpill" value="@Model.TimeOfSpill" type="datetime" class="form-control" />
                <span asp-validation-for="TimeOfSpill" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TimeIdentifiedSpill" class="form-label">Time Identified as Spill</label>
                <input id="TimeIdentifiedSpill" name="TimeIdentifiedSpill" value="@Model.TimeIdentifiedSpill" type="datetime" class="form-control" />
                <span asp-validation-for="TimeIdentifiedSpill" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TimeReported" class="form-label">Time Reported to ISSO</label>
                <input id="TimeReported" name="TimeReported" value="@Model.TimeReported" type="datetime" class="form-control" />
                <span asp-validation-for="TimeReported" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="WorkstationAffected" class="form-label">Workstation Affected</label>
                <input asp-for="WorkstationAffected" class="form-control" />
                <span asp-validation-for="WorkstationAffected" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="WorkstationAssetNumber" class="form-label">Workstation Asset Number</label>
                <input asp-for="WorkstationAssetNumber" class="form-control" />
                <span asp-validation-for="WorkstationAssetNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SpecialistId" class="form-label">Specialist User Name</label>
                <select asp-for="SpecialistId" asp-items="ViewBag.SpecialistUserId" class="form-control">
                    <option value=""></option>
                </select>
                <span asp-validation-for="SpecialistId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ReviewerId" class="form-label">Reviewer User Name</label>
                <select asp-for="ReviewerId" asp-items="ViewBag.ReviewerUserId" class="form-control">
                    <option value=""></option>
                </select>
                <span asp-validation-for="ReviewerId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SystemsInvolved" class="form-label">Systems Involved</label>
                <select asp-for="SystemsInvolved" asp-items="ViewBag.SystemsInvolved" class="form-control" multiple>
                    <option value=""></option>
                </select>
                <span asp-validation-for="SystemsInvolved" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <input type="submit" value="Save" class="btn btn-primary" /> |
                <a class="btn btn-primary" asp-action="Index">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
