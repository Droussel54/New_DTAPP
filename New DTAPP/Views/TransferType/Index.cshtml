@model IEnumerable<New_DTAPP.Models.TransferTypeModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create"><img src="~/images/Add.png" /></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TransferTypeDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Archived)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ordering)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TransferTypeDesc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Archived)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ordering)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TransferTypeId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.TransferTypeId">Details</a>

                </td>
            </tr>
        }
    </tbody>
</table>